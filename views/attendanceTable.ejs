<!-- attendanceTable.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Attendance Table</title>
</head>
<body>

  <h2>Attendance Table</h2>

  <table border="1">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        
        <th>Extra Hours</th>
      </tr>
    </thead>
    <tbody>
      <% attendanceData.forEach(data => { %>
        <tr>
          <td><%= data.name %></td>
          <td><%= data.email %></td>
          <td><%= data.role %></td>
          
          <td><%= data.extraHours.toFixed(2) %> hours</td>
        </tr>
      <% }); %>
    </tbody>
  </table>

</body>
</html>
